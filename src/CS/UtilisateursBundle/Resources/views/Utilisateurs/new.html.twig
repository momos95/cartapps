{% extends 'CSCoreBundle::layout.html.twig' %}

{% block title %}
    {{ parent() }} - Utilisateurs
{% endblock %}

{% block body %}

    <div class="container">
        <br>
        <br>

        <div class="well well-sm">

            <div class="btn-group text-right">
                <a href="{{ path('cs_utilisateurs_all') }}" title="Liste des utilisateurs" class="btn btn-default btn-sm text-right"><span
                            class="glyphicon glyphicon-list"></span> Liste
                </a>
            </div>
        </div>


        {% for message in app.session.flashbag.get('notice') %}
            <div>
                <div class="alert alert-dismissible text-success text-center">
                    <button type="button" class="close" data-dismiss="alert">&times;</button>
                    <strong> {{ message }} </strong>
                </div>
            </div>
        {% endfor %}

        {% for message in app.session.flashbag.get('warning') %}
            <div>
                <div class="alert alert-dismissible text-danger text-center">
                    <button type="button" class="close" data-dismiss="alert">&times;</button>
                    <strong> {{ message }} </strong>
                </div>
            </div>
        {% endfor %}

        <div class="well well-lg">

            {{ form_start(form,{'attr' : {'class' : 'form-horizontal'}}) }}

            <div class="form-group">

                {{ form_label(form.nom,"Nom : ",{'label_attr' : {'class': 'col-lg-3 control-label'}}) }}

                <div class="col-lg-5">
                    {{ form_widget(form.nom,{'attr':{'class':'form-control','placeholder':'Nom de l\'utilisateur'}}) }}
                </div>

                <div class="col-lg-4 text-danger">
                    {{ form_errors(form.nom) }}
                </div>

            </div>

            <div class="form-group">

                {{ form_label(form.prenom,"Prénom : ",{'label_attr' : {'class': 'col-lg-3 control-label'}}) }}

                <div class="col-lg-5">
                    {{ form_widget(form.prenom,{'attr':{'class':'form-control','placeholder':'Prénom de l\'utilisateur'}}) }}
                </div>

                <div class="col-lg-4 text-danger">
                    {{ form_errors(form.prenom) }}
                </div>

            </div>

            <div class="form-group">

                {{ form_label(form.login,"Login : ",{'label_attr' : {'class': 'col-lg-3 control-label'}}) }}

                <div class="col-lg-5">
                    {{ form_widget(form.login,{'attr':{'class':'form-control','placeholder':'Login de l\'utilisateur'}}) }}
                </div>

                <div class="col-lg-4 text-danger">
                    {{ form_errors(form.login) }}
                </div>

            </div>

            <div class="form-group">

                {{ form_label(form.mdp,"Mot de passe : ",{'label_attr' : {'class': 'col-lg-3 control-label'}}) }}

                <div class="col-lg-5">
                    {{ form_widget(form.mdp,{'attr':{'class':'form-control','placeholder':'Mot de passe de l\'utilisateur'}}) }}
                </div>

                <div class="col-lg-4 text-danger">
                    {{ form_errors(form.mdp) }}
                </div>

            </div>

            <div class="form-group">

                {{ form_label(form.mail,"E-Mail : ",{'label_attr' : {'class': 'col-lg-3 control-label'}}) }}

                <div class="col-lg-5">
                    {{ form_widget(form.mail,{'attr':{'class':'form-control','placeholder':'E-Mail de l\'utilisateur'}}) }}
                </div>

                <div class="col-lg-4 text-danger">
                    {{ form_errors(form.mail) }}
                </div>

            </div>

            <div class="form-group">

                {{ form_label(form.numPoste,"Num. Poste : ",{'label_attr' : {'class': 'col-lg-3 control-label'}}) }}

                <div class="col-lg-5">
                    {{ form_widget(form.numPoste,{'attr':{'class':'form-control','placeholder':'Poste de l\'utilisateur'}}) }}
                </div>

                <div class="col-lg-4 text-danger">
                    {{ form_errors(form.numPoste) }}
                </div>

            </div>

            <div class="form-group">

                {{ form_label(form.fonction,"Fonction : ",{'label_attr' : {'class': 'col-lg-3 control-label'}}) }}

                <div class="col-lg-5">
                    {{ form_widget(form.fonction,{'attr':{'class':'form-control','placeholder':'Fonction de l\'utilisateur'}}) }}
                </div>

                <div class="col-lg-4 text-danger">
                    {{ form_errors(form.fonction) }}
                </div>

            </div>

            <div class="form-group">

                {{ form_label(form.role,"Rôle : ",{'label_attr' : {'class': 'col-lg-3 control-label'}}) }}

                <div class="col-lg-5">
                    {{ form_widget(form.role,{'attr':{'class':'form-control','placeholder':'Rôle de l\'utilisateur'}}) }}
                </div>

                <div class="col-lg-4 text-danger">
                    {{ form_errors(form.role) }}
                </div>

            </div>

            <div class="form-group">
                <div class="col-lg-4"></div>
                <div class="col-lg-4">
                    <button class="btn btn-primary">Modifier</button>
                </div>
                <div class="col-lg-4"></div>
            </div>


            {{ form_rest(form) }}

            {{ form_end(form) }}

        </div>

    </div>


{% endblock %}

