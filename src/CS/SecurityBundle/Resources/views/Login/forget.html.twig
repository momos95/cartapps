{% extends "CSCoreBundle::layout.html.twig" %}

{% block body %}

    <div class="container">

        <h1 class="text-center">{{ nom_site | upper}}</h1>
        <hr>

        <div id="loginbox" style="margin-top:50px;" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
            <div class="panel panel-info" >
                <div class="panel-heading">
                    <div class="panel-title">Nouveau mot de passe</div>
                </div>

                <div style="padding-top:30px" class="panel-body" >

                    {% if error %}
                        <div class="alert alert-danger col-sm-12" style="text-align: center; font-size: 20px; font-weight: normal">{{ error.message }}</div>
                    {% endif %}

                    <form action="{{ path('forget') }}" method="post"  id="loginform" class="form-horizontal" role="form">

                        <div style="margin-bottom: 25px" class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                            <input id="username" type="text" class="form-control" name="_username" value="" placeholder="username or email" required>
                        </div>

                        <div style="margin-top:10px" class="form-group">
                            <!-- Button -->

                            <div class="col-lg-12 controls">
                                <button class="btn btn-rounded btn-primary btn-block" type="submit">Récupérer mon mot de passe</button>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-12 control">
                                <div style="border-top: 1px solid#888; padding-top:15px; font-size:85%" >
                                    Mot de passe retrouvé ?
                                    <a href="{{ path('login') }}">
                                        Se connecter
                                    </a>
                                </div>
                            </div>
                        </div>

                    </form>



                </div>
            </div>
        </div>

    </div>

{% endblock %}