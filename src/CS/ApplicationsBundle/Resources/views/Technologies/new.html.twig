<div id="newModal" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Ajouter une technologie</h4>
            </div>
            <div class="modal-body">
                <form class="form-horizontal" id="formTechnologie" method="post" action="{{ path('cs_technologies_new') }}">
                    <fieldset>
                        <div class="form-group">
                            <label for="inputLib" class="col-lg-2 control-label">Description</label>
                            <div class="col-lg-7">
                                <input type="text" class="form-control" style="padding-left: 5px" id="inputLib" name="libTechnologie" placeholder="Libellé" required="true">
                            </div>
                            <div class="col-lg-3">
                                <button type="button" onclick="valideFormulaire()" class="btn btn-primary">Valider</button>
                            </div>
                            <div class="col-lg-12 text-danger text-center" id="message_erreur">
                            </div>
                        </div>
                    </fieldset>

                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Fermer</button>
            </div>
        </div>

    </div>
</div>


<script>
    function valideFormulaire(){

        libelle = document.getElementById("inputLib").value;
        libelleLength = libelle.length;

        if(libelleLength < 2){
            document.getElementById("message_erreur").innerHTML = "<br>Le libellé doit contenir au minimum 2 caractères.<br>";
            return false ;
        }

        document.getElementById("formTechnologie").method = "POST";
        document.getElementById("formTechnologie").submit();

    }
</script>